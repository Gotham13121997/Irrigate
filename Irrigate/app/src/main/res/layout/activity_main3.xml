<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_main2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="5dp"
    android:background="#000000"
    tools:context="com.aap.irrigate.Main2Activity">

    <ImageView
        android:paddingTop="3dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/ferti"
        android:id="@+id/imageView2"
        android:background="#2FCC72"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />
    <RelativeLayout
        android:padding="10dp"
        android:id="@+id/rl"
        android:background="#F1C411"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageView2"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="SYSTEM"
            android:id="@+id/up"
            android:textSize="30sp"
            android:textColor="#FFFFFF"
            android:textStyle="bold"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="STATISTICS"
            android:textColor="#000000"
            android:background="#ffffff00"
            android:layout_above="@+id/ib"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_below="@+id/up"
            android:id="@+id/ib"
            android:layout_height="wrap_content"
            android:text="STATUS"
            android:textSize="20sp"
            android:textColor="#ff0000"
            android:textStyle="bold"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:textSize="20sp"
            android:layout_below="@+id/up"
            android:textColor="#ffffff"
            android:textStyle="bold"
            android:text="ON"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ib"
            android:id="@+id/tv"
            android:text="TURN SYSTEM OFF"
            android:textStyle="bold"
            android:textSize="20dp"
            android:textColor="#ff0000"
            android:gravity="center"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv"
            android:background="#ffffff00"
            android:text="MSG"
            />
        <Button
            android:background="#ffffff00"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/tv"
            android:text="APP"
            />

    </RelativeLayout>
    <RelativeLayout
        android:padding="10dp"
        android:background="#ffa9b6"

        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rl"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="FERTILIZER"
            android:id="@+id/up1"
            android:textSize="30sp"
            android:textColor="#FFFFFF"
            android:textStyle="bold"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="STATISTICS"
            android:textColor="#000000"
            android:background="#ffb6c1"
            android:layout_above="@+id/ib1"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_below="@+id/up1"
            android:id="@+id/ib1"
            android:layout_height="wrap_content"
            android:text="STATUS"
            android:textSize="20sp"
            android:textColor="#ff0000"
            android:textStyle="bold"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:textSize="20sp"
            android:layout_below="@+id/up1"
            android:textColor="#ffffff"
            android:textStyle="bold"
            android:text="OFF"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ib1"
            android:id="@+id/tv1"
            android:text="TURN FERTILIZER ON"
            android:textStyle="bold"
            android:textSize="20dp"
            android:textColor="#ff0000"
            android:gravity="center"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv1"
            android:background="#ffb6c1"
            android:text="MSG"
            />
        <Button
            android:background="#ffb6c1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/tv1"
            android:text="APP"
            />

    </RelativeLayout>

</RelativeLayout>
